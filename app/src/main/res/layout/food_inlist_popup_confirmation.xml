<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/foodTaken"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="@string/quantityFood"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/quantityTaken"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:hint="Introduzca cantidad"
        android:ems="10"
        android:textSize="15sp"
        android:inputType="number"
        android:layout_below="@+id/foodTaken"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantityTaken"
        android:orientation="horizontal">

        <Button
            android:id="@+id/acceptQuantity"
            android:layout_width="125sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Aceptar" />

        <Button
            android:id="@+id/denyQuantity"
            android:layout_width="125sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar" />
    </LinearLayout>

</RelativeLayout>